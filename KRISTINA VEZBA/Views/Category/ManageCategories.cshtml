
@model IEnumerable<KRISTINA_VEZBA.Models.Category>

<h3 class="my-5 col-6">
    Manage Categories Page<span>
        <a class="btn btn-secondary position-relative top-0 start-100" asp-controller="Category" asp-action="CreateCategory">
            Add New Category
        </a>
    </span>
</h3>

<div class="row gx-3">
    <div class="col-8">
        @foreach (var cat in  Model)
        {
            <div class="card shopping-cart-card mb-2">
                <div class="row">
                    <div class="col-md-8">
                        <div class="card-body"> 
                            <h5 class="card-text">@cat.CategoryName</h5>
                            <div class="d-flex justify-content-between"> 
                                <h6 class="col-md-8">@cat.Description</h6>
                                <p class="button">
                                    <a class="btn btn-secondary" asp-controller="Category" asp-action="UpdateCategory" asp-route-categoryId="@cat.CategoryId">Update</a>
                                </p>
                                <a type="button" class="btn btn-secondary" asp-controller="Category" asp-action="DeleteCategory" asp-route-categoryId="@cat.CategoryId">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"></path>
                                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"></path>
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>